@{
    ViewBag.Title = "Men";
}
@model List<Onlinecloth.Models.Item>
@using Onlinecloth.Models;

<html>

<body>
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">

                    <a style="color:blue;" href="/home/Men" class="list-group-item">Men</a>
                    <a style="color:blue;" href="/home/Women" class="list-group-item">Women</a>
                    
                </div>
            </div>
            <div class="col-md-12">


                <hr />
                <h1>Kids</h1>
               
                <hr />


                <div class="row">

                    @foreach (var s in Model)
                    {
                        if (s.Description.Equals("Kids"))
                        {
                            <div class="col-sm-4 col-lg-4 col-md-4">
                                <div class="thumbnail">

                                    <img src="~/Content/img/@s.Photo" alt="">
                                </div>
                                <div class="caption">
                                    <h3>@s.Name</h3>
                                    
                                    <h3>Price Rs. @s.Price</h3>

                                       
                                            <a href="~/Home/AddToCart?itemId=@s.Id" class="btn btn-default btn-success">Add To Cart</a><br />
                                            <a href="~/Home/AddToWishList?itemId=@s.Id" class="btn btn-default btn-info">Add To WishList</a><br />
                                    
                                    
                                </div>
                            </div>

                        }
                    }
                </div>

            </div>

        </div>

    </div>


    <!-- /.container -->
    <div class="container">
        <hr>
        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">

                </div>
            </div>
        </footer>
    </div>

</body>
</html>
