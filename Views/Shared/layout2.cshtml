@{
    ViewBag.Title = "Layout2";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-2.1.4.js"></script>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <nav class="navbar navbar-default">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <ul class="nav navbar-nav">
                <li>
                    <h3 style="color:aquamarine"> Admin </h3>
                </li>
                @if (Session["user"] == null) { 
                <li>
                    <a href="/Home/Index">Logout</a>
                </li>
                }
                </ul>
            </div>
        </nav>
                <div class="container">
                    <div class="row">
                        <div class="col-md-2">
                            <div class="list-group">
                                <h3>User</h3>
                                <font size="4">
                                    <a href="/Admin/AddUser" class="list-group-item">Add New User </a>
                                    <a href="/Admin/UpdateUser" class="list-group-item">Update User</a>
                                    
                                    <a href="/Admin/SearchUser" class="list-group-item">Search User</a>
                                    <a href="/Admin/ViewAllUser" class="list-group-item">View ALL User</a>
                                </font>

                                <h3>Items</h3>
                                <font size="4">
                                    <a href="/Admin/AddItem" class="list-group-item">Add New Item </a>
                                    <a href="/Admin/UpdateItem" class="list-group-item">Update Item</a>
                                   
                                    <a href="/Admin/SearchItem" class="list-group-item">Search Item</a>
                                    <a href="Admin/ViewAllItem" class="list-group-item">View ALL Item</a>
                                </font>


                            </div>

                        </div>
                        <div class="col-md-10">
                            @RenderBody()
                        </div>
                        <div>

                        </div>

                    </div>

                </div>
                @Scripts.Render("~/bundles/jquery")
                @RenderSection("scripts", required: false)
</body>
</html>




