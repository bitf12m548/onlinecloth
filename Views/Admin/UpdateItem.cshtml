@{
    ViewBag.Title = "UpdateItem";
    Layout = "~/Views/Shared/layout2.cshtml";
}

<form action="/Admin/Update" method="post" style="width:70%; margin-right: auto; margin-left: auto; border: 1px">
    <h2>Update  Item</h2>
    <br>
    <div class="form-group">

        <br />
        <div class="row">
            <div class="col-md-2 text-right">
                Enter ID:
            </div>
            <div class="col-md-6">
                <input type="text" name="Id" style="color:black" class="form-control">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-2 text-right">
                Name:
            </div>
            <div class="col-md-6">
                <input type="text" name="Name" style="color:black" class="form-control">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-2 text-right">
                Catagory:
            </div>
        
        <div class="col-md-4">

            <select name="Description" id="catg" class=" well well-sm col-sm-10" required="required">
                <option value="Men">Men</option>
                <option value="Women">Women</option>
                <option value="Kids">Kids</option>

            </select>
        </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-2 text-right">
                Price:
            </div>
            <div class="col-md-6">
                <input type="text" name="Price" style="color:black" class="form-control">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-2 text-right">
                Photo:
            </div>
            <div class="col-md-6">
                <input type="file" name="Photo" style="color:black" class="form-control">
            </div>
        </div>
        <br />
        <div class="row">
            <div style="margin-left:15%" class="col-md-3">
                <input type="submit">
            </div>
        </div>
    </div>
</form>
