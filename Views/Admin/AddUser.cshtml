@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/Shared/layout2.cshtml";
}

<form action="/Admin/Add" method="post" style="width:100%; margin-right: auto; margin-left: auto; border: 1px">
    <h2>Add User </h2>
    <br>
    <div class="form-group">

        <br />
        <div class="row">
            <div class="col-md-2 text-right">
                Email:
            </div>
            <div class="col-md-4">
                <input type="text" name="Email" style="color:black" class="form-control">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-2 text-right">
                Address:
            </div>
            <div class="col-md-4">
                <input type="text" name="Address" style="color:black" class="form-control">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-2 text-right">
                Contact Number:
            </div>
            <div class="col-md-4">
                <input type="text" name="PhoneNumber" style="color:black" class="form-control">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-2 text-right">
                Password:
            </div>
            <div class="col-md-4">
                <input type="password" name="Password" style="color:black" class="form-control">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-2 text-right">
                Gender:
            </div>
            <div class="col-md-4">
                <input type="password" name="Gender" style="color:black" class="form-control">
            </div>
        </div>
        <br />
        <div class="row">
            <div style="margin-left:15%" class="col-md-3">
                <input type="submit">
            </div>
        </div>
    </div>
</form>

